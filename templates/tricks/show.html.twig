{% extends 'base.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}
    <h1>Tricks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr> <th>Image</th>
                <td><img class="card-img-top" src="{{ asset('uploads/images/' ~ trick.image) }}" alt="Card image cap" style="width:200px"></td>
            </tr>

            <tr>
                <th>Title</th>
                <td>{{ trick.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ trick.content }}</td>
            </tr>


            {% for video in trick.videos %}
            <tr>
                <th>Video</th>
                <td><img class="card-img-top" src="{{ asset('uploads/images/' ~ video.filename) }}" alt="Card image cap" style="width:200px"></td>
            </tr>
            {% endfor %}

        </tbody>
    </table>

    <a href="{{ path('tricks_index') }}">back to list</a>

    <a href="{{ path('tricks_edit', {'id': trick.id}) }}">edit</a>

    {{ include('tricks/_delete_form.html.twig') }}
{% endblock %}
