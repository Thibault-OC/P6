{% extends 'base.html.twig' %}

{% block title %}Tricks index{% endblock %}

{% block body %}
    <div class="img-beandeau">
        <h1>Tricks index</h1>
        <a href="#tricks"><i class="fas fa-arrow-down"></i></a>
    </div>


    <div class="container" id ="tricks">
        <div class="row">

        {% for trick in tricks %}



        <div class="col-md-4 mb-5">
            <div class="card "  >
                <img class="card-img-top" src="{{ asset('uploads/images/' ~ trick.image) }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ trick.title }}</h5>
                    <p class="card-text">{{ trick.content|length > 50 ? trick.content|slice(0, 50) ~ '...' : trick.content }}</p>
                    <a href="{{ path('tricks_show', {'id': trick.id}) }}">show</a>
                    <a href="{{ path('tricks_edit', {'id': trick.id}) }}">edit</a>
                </div>
            </div>
        </div>
        {% else %}

        {% endfor %}
        </div>
    </div>
    <a href="{{ path('tricks_new') }}">Create new</a>
{% endblock %}
