{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="page_login">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}



    {{ form_start(registrationForm) }}
    <div class="form-header">
        <h1>Register</h1>
    </div>

        {{ form_row(registrationForm.firstname, { 'label' : 'Username', 'attr' : { 'class' : 'form-control' }}) }}

        {{ form_row(registrationForm.email, { 'label' : 'Email', 'attr' : { 'class' : 'form-control' }}) }}

        {{ form_row(registrationForm.plainPassword, { 'label' : 'Password', 'attr' : { 'class' : 'form-control' }}) }}

        {{ form_row(registrationForm.agreeTerms) }}


    <button class="btn btn-lg btn-primary" type="submit">
        Register
    </button>

    <a href ="{{ path('app_login') }}"> Already an account ?</a>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
